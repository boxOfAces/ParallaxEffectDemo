<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yahoo_effect_text"
        android:id="@+id/btn_yahoo_effect"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/normal_parallax_text"
        android:id="@+id/btn_normal_effect"
        android:layout_below="@+id/btn_yahoo_effect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speed_seekbar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:progress="50"
/>
    <TextView
        android:text="@string/parallax_speed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/speed_seekbar"/>

    <TextView
        android:id="@+id/distance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance_val_title"
        android:layout_below="@id/speed_seekbar"
        android:layout_marginTop="30dp"/>
    <SeekBar
        android:id="@+id/distance_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_title"
        android:progress="35"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
